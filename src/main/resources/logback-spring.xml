<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <conversionRule conversionWord="clr"
                    converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx"
                    converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <springProperty scope="context" name="activeProfile" source="spring.profiles.active" defaultValue="dev"/>

    <property name="LOG_DIR" value="logs"/>
    <property name="PATTERN_MDC"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{requestId} %X{user}] %logger{36} - %msg%n"/>

    <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %clr(%-5level) [%X{requestId} %X{user}] %clr(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_TEST" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${PATTERN_MDC}</pattern></encoder>
    </appender>

    <appender name="FILE_DEV" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/app-dev.log</file>
        <encoder><pattern>${PATTERN_MDC}</pattern></encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/app-dev.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
    </appender>

    <appender name="FILE_TEST" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/app-test.log</file>
        <encoder><pattern>${PATTERN_MDC}</pattern></encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/app-test.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
            <maxFileSize>20MB</maxFileSize>
        </rollingPolicy>
    </appender>

    <logger name="com.epam.rd.autocode.spring.project" level="INFO"/>

    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE_DEV"/>
            <appender-ref ref="FILE_DEV"/>
        </root>
    </springProfile>

    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE_TEST"/>
            <appender-ref ref="FILE_TEST"/>
        </root>
    </springProfile>

    <springProfile name="!dev &amp; !test">
        <root level="INFO">
            <appender-ref ref="CONSOLE_TEST"/>
        </root>
    </springProfile>
</configuration>
